<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">
    <% if current_user %>
      Signed in as <%= current_user.email %> | <%= link_to "Logout",
      [:session][current_user.id] %>
    <% else %>
      <%= link_to 'Login', [:new_session] %> | <%= link_to 'Signup',
      [:new_user] %>
    <% end %>
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
